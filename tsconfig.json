{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // 将import * as React from 'react';
    // 设置为熟悉的import React from 'react';
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // 路径别名检测
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@router/*": ["src/router/*"],
      "@store/*": ["src/store/*"],
      "@type/*": ["src/type/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
